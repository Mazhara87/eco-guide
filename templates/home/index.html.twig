{% extends 'base.html.twig' %}

{% block title %}Accueil - EcoGuide{% endblock %}

{% block body %}
  <div class="hero-banner">
    <img src="{{ asset('images/hero-banner.jpg') }}" alt="Nature Banner">
    <h1>Guidons le changement, préservons notre environnement</h1>
  </div>

  <section class="latest-news">
    <h2>Dernières actualités</h2>
    {% for post in latest_posts %}
      <article>
        <h3>{{ post.title }}</h3>
        <p>{{ post.summary }}</p>
        <a href="{{ path('blog_post', {'id': post.id}) }}">Lire la suite</a>
      </article>
    {% endfor %}
  </section>

  <section class="featured-projects">
    <h2>Projets en vedette</h2>
    {% for project in featured_projects %}
      <div>
        <h3>{{ project.title }}</h3>
        <p>{{ project.description }}</p>
        <a href="{{ path('project_details', {'id': project.id}) }}">Détails du projet</a>
      </div>
    {% endfor %}
  </section>
{% endblock %}