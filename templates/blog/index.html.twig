
{% extends 'base.html.twig' %}

{% block title %}Blog et Actualités{% endblock %}

{% block body %}
    <h1>Blog et Actualités</h1>

    {% for post in posts %}
        <article>
            <h2>{{ post.title }}</h2>
            <p>{{ post.content }}</p>
            <a href="{{ path('app_blog_post', {'id': post.id}) }}">Lire la suite</a>
        </article>
    {% endfor %}

{% endblock %}
